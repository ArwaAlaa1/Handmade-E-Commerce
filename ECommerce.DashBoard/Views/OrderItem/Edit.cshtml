
@using ECommerce.DashBoard.ViewModels
@model OrderItemEditVM

@{
    ViewData["Title"] = "Edit Order Item";
}

<h2>Edit Order Item</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="OrderItemId" />
    <input type="hidden" asp-for="ProductName" />

    <div class="form-group">
        <label for="OrderItemStatus">Order Item Status</label>
        <select asp-for="OrderItemStatus" class="form-control" asp-items="Model.StatusOptions">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

