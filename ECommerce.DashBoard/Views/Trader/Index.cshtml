@model IEnumerable<ECommerce.Core.Models.AppUser>

<div class="card">
  <div class="d-flex justify-content-between">
        <h5 class="card-header">Traders</h5>
       
            <form asp-action="Index" method="get">
                <button type="submit" name="Active" value="all" class="btn btn-outline-primary">All Traders</button>
            <button type="submit" name="Active" value="active" class="btn btn-outline-success">Active Traders</button>
            <button type="submit" name="Active" value="nonactive" class="btn btn-outline-danger">Non-Active Traders</button>
            </form>
     
  </div>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    
                    <th>Display Name</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>IsActive</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
               @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @* <img src="~/Images/Users/@item.Photo" alt="Brand Image" class="rounded-circle w-25 h-25"> *@
                        <span>@item.DisplayName</span>
                        </td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>
                           @item.PhoneNumber
                        </td>
                        <td>@if (item.IsActive)
                            {
                                <input type="checkbox" checked/>
                            }else{
                                <input type="checkbox"  />
                            }
                            
                            </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id"><i class="bx bx-trash me-1"></i> Details</a>
                                    <a class="dropdown-item" asp-action="EditTrader" asp-route-id="@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" asp-action="DeleteTrader" asp-route-id="@item.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
<!--/ Hoverable Table rows -->

<hr class="my-12">