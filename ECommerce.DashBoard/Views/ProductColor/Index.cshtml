@using ECommerce.Core.Models
@model IEnumerable<Color>

@{
    ViewData["Title"] = "Colors";
}

<h2>Colors</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Color</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Trader</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var color in Model)
        {
            <tr>
                <td>@color.Name</td>
                <td>@color.Trader?.UserName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@color.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@color.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
