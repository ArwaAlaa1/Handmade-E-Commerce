@model IEnumerable<ECommerce.Core.Models.Category>

<div class="card">
    <div class="d-flex justify-content-between align-items-center px-3 pt-3">
        <h5 class="card-header mb-0">Category</h5>
        <form asp-action="Create" method="get" class="mb-0">
            <button type="submit" class="btn btn-lg btn-primary">
                <i class="icon-base bx bx-plus icon-sm me-1"></i>New Category
            </button>
        </form>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th style="width: 30%;">Name</th>
                    <th style="width: 25%;">Description</th>
                    <th style="width: 10%;">IsActive</th>
                    <th style="width: 10%;"></th> <!-- Actions column -->
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="~/Images/Categories/@item.Photo" alt="Category" class="rounded-2 me-2" style="width: 50px; height: 50px;">
                                <span>@item.Name</span>
                            </div>
                        </td>
                        <td>
                            <div class="text-truncate" style="max-width: 200px;" title="@item.Description">
                                @item.Description
                            </div>
                        </td>
                        <td>
                            <input type="checkbox" @(item.IsActive ? "checked" : "") readonly disabled />
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id"><i class="bx bx-info-circle me-1"></i> Details</a>
                                    <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
