@using ECommerce.Core.Models.Order
@model ECommerce.DashBoard.ViewModels.OrderDetailsVM

   
    @{
        Layout = null;
    }

    <!DOCTYPE html>
    <html>
    <head>
        <title>Invoice</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style >
        body {
            font-family: Arial, sans-serif;
            justify-content: center;
            align-content:center;
            text-align:center;
        }
        .card {
            margin: 20px;
        }
        .badge {
            font-size: 0.9em;
        }
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </head>
<body>
    
    <div class="card" id="print">
        <button onclick="PrintDoc()" onabort="" class="btn btn-link" style="align-items:end;">Print</button>
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center px-3 pt-3">
            <h5 class="card-header mb-0">Order Details - @Model.OrderId</h5>
        </div>

        <!-- Order Details -->
        <div class="card-body">
            <div class="mb-3">
                <strong>Customer Email:</strong> @Model.CustomerEmail
            </div>
            <div class="mb-3">
                <strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")
            </div>
            <div class="mb-3">
                <strong>Order Address:</strong> @Model.Address
            </div>
            <div class="mb-3">
                <strong>Status:</strong> @Model.Status
            </div>
            <div class="mb-3">
                <strong>Shipping Cost:</strong> @Model.ShippingCost.ToString("C")
            </div>
            <div class="mb-3">
                <strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")
            </div>

            <!-- Order Items -->
            <h6 class="mt-4">Order Items:</h6>
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Trader Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total Price</th>
                        @* <th>Customize Info</th> *@
                        <th>Color</th>
                        <th>Size</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.TraderName</td>
                            <td>@item.Quantity</td>
                            <td>@item.ProductCost.ToString("C")</td>
                            <td>@item.TotalCost.ToString("C")</td>
                            
                            @* <td>@item.CustomizeInfo</td> *@
                            <td>@item.Color</td>
                            <td>@item.Size</td>
                        </tr>
                        
                    }
                        <tr>
                            <td  colspan="8" style="text-align:center">
                                <strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")
                            </td>

                        </tr>
                </tbody>
            </table>
        </div>
    </div>




</body>

    </html>
<script>
    function PrintDoc() {
        window.print();
    }
</script>