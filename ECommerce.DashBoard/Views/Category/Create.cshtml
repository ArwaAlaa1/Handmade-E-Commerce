@model ECommerce.DashBoard.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Create Category";
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-6">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Add Category</h5>
                
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <partial name="~/Views/Category/PartialViews/CreateEditPartial.cshtml" model="Model" />
                   

                    <div asp-validation-summary="ModelOnly"></div>
                    <button type="submit" class="btn btn-primary">Send</button>
                    <a asp-action="Index" asp-controller="Category" class="btn btn-danger">Back To List</a>
                
                </form>
                
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}