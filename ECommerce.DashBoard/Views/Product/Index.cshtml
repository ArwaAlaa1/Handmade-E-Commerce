@model IEnumerable<ECommerce.Core.Models.Product>


@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Create New Product</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Cost)</th>
            <th>@Html.DisplayNameFor(m => m.First().Category.Name)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Cost.ToString("C")</td>
                <td>@item.Category?.Name</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
