
@using ECommerce.DashBoard.ViewModels
@model ECommerce.DashBoard.ViewModels.OrderDetailsVM

<div class="card">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center px-3 pt-3">
        <h5 class="card-header mb-0">Order Details - @Model.OrderId</h5>
    </div>

    <!-- Order Details -->
    <div class="card-body">
        <div class="mb-3">
            <strong>Customer Email:</strong> @Model.CustomerEmail
        </div>
        <div class="mb-3">
            <strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")
        </div>
        <div class="mb-3">
            <strong>Status:</strong>
            @if (Model.Status == ECommerce.Core.Models.Order.OrderStatus.Pending)
            {
                <span class="badge bg-warning text-dark">Pending</span>
            }
            else if (Model.Status == ECommerce.Core.Models.Order.OrderStatus.InProgress)
            {
                <span class="badge bg-info">In Progress</span>
            }
            else if (Model.Status == ECommerce.Core.Models.Order.OrderStatus.Ready)
            {
                <span class="badge bg-success">Ready</span>
            }
            else if (Model.Status == ECommerce.Core.Models.Order.OrderStatus.Cancelled)
            {
                <span class="badge bg-danger">Cancelled</span>
            }
            else if (Model.Status == ECommerce.Core.Models.Order.OrderStatus.Shipping)
            {
                <span class="badge bg-dark">Shipping</span>
            }
            else if (Model.Status == ECommerce.Core.Models.Order.OrderStatus.Deliverd)
            {
                <span class="badge bg-success">Delivered</span>
            }
        </div>
        <div class="mb-3">
            <strong>Shipping Cost:</strong> @Model.ShippingCost.ToString("C")
        </div>
        <div class="mb-3">
            <strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")
        </div>

        <!-- Order Items -->
        <h6 class="mt-4">Order Items:</h6>
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@item.ProductCost.ToString("C")</td>
                        <td>@item.TotalCost.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
