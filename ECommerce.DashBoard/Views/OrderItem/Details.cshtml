@model ECommerce.Core.Models.Order.OrderItem

@{
    ViewData["Title"] = "Order Item Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Order Item Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order Item ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Model.Product?.Name</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Product.Cost</dd>

        <dt class="col-sm-2">Order Item Status</dt>
        <dd class="col-sm-10">@Model.OrderItemStatus</dd>

        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.OrderId</dd>

    @*     <dt class="col-sm-2">Order Status</dt>
        <dd class="col-sm-10">@Model.Order?.Status</dd> *@
    </dl>

    <div class="btn-group" role="group" aria-label="Actions">
        <a href="@Url.Action("Edit", "OrderItem", new { orderItemId = Model.Id })" class="btn btn-primary">Edit</a>
       @*  <form method="post" action="@Url.Action("DeleteOrderItem", "OrderItem", new { orderItemId = Model.Id })" style="display:inline;">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form> *@
    </div>
</div>
