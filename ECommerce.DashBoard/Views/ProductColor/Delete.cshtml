@model ECommerce.Core.Models.Color

@{
    ViewData["Title"] = "Delete Color";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this color?</h4>
<div>
    <strong>@Model.Name</strong>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger mt-2" />
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
