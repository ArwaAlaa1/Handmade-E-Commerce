@model IEnumerable<ECommerce.Core.Models.AppUser>

<div class="card">
    <!-- Header: Title + Buttons -->
    <div class="d-flex justify-content-between align-items-center px-3 pt-3">
        <h5 class="card-header mb-0">Traders</h5>

        <div class="d-flex flex-wrap gap-2">
            <form asp-action="AddTrader" method="get" class="mb-0">
                <button type="submit" class="btn btn-lg btn-primary">
                    <i class="icon-base bx bx-plus icon-sm me-1"></i> New Trader
                </button>
            </form>

            <form asp-action="Index" method="get" class="d-flex gap-2 mb-0">
                <button type="submit" name="Active" value="all" class="btn btn-outline-primary">All Traders</button>
                <button type="submit" name="Active" value="active" class="btn btn-outline-success">Active</button>
                <button type="submit" name="Active" value="nonactive" class="btn btn-outline-danger">Non-Active</button>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="table-responsive text-nowrap">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th style="width: 20%;">Display Name</th>
                    <th style="width: 15%;">User Name</th>
                    <th style="width: 20%;">Email</th>
                    <th style="width: 15%;">Phone</th>
                    <th style="width: 10%;">IsActive</th>
                    <th style="width: 10%;"></th> <!-- For actions -->
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DisplayName</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>
                            <input type="checkbox" @(item.IsActive ? "checked" : "") readonly disabled />
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id"><i class="bx bx-info-circle me-1"></i> Details</a>
                                    <a class="dropdown-item" asp-action="Report" asp-route-id="@item.Id"><i class="bx bx-line-chart me-1"></i> Report</a>
                                    <a class="dropdown-item" asp-action="EditTrader" asp-route-id="@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" asp-action="DeleteTrader" asp-route-id="@item.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<hr class="my-4">
